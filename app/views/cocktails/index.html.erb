<div class="banner-home">
  <h1>Welcome to Mister Cocktail</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="mt-4 mb-4">All our cocktails (
        <%= Cocktail.count %>)</h1>
    </div>
  </div>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-lg-4 col-md-6 col-12 mb-3">
      <% if cocktail.photo.key %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
        <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1527628126150-086ff233b951')">
          <% end %>
          <%= link_to cocktail.name, cocktail_path(cocktail)%>
        </div>
      </div>
      <% end %>
    </div>
  </div>
