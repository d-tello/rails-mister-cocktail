<div class="home-banner">
  <h1>
    <%= @cocktail.name %>
  </h1>
</div>
<div class="container-show">
  <h2 class="mt-3 mb-3">Ingredients</h2>
  <div class="card-show">
    <% @doses.each do |dose| %>
    <ul>
      <li>
        <p>
          <%= dose.description %> <i class="fas fa-glass-martini-alt"></i>
          <%= dose.ingredient.name %>
          <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe,  delete_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
        </p>
      </li>
    </ul>
    <% end %>
      <%= link_to 'Add doses', new_cocktail_dose_path(@cocktail), class: "btn-standard"%>
  </div>
</div>
