<h1>
  <%= @cocktail.name %>
</h1>

<h2>Ingredients</h2>
<% @doses.each do |dose| %>
<ul>
  <li>
    <%= dose.description %> |
    <%= dose.ingredient.name %> |
    <td><%= link_to 'Destroy',  delete_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </li>
</ul>
<% end %>

<%= link_to 'Add doses', new_cocktail_dose_path(@cocktail)%>
<%= link_to 'Back', cocktails_path %>
